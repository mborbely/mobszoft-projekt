<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aut.bme.hu.mobszoft_projekt">

    <application
        android:name="aut.bme.hu.app.SocialApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="aut.bme.hu.ui.friends.FriendsActivity"
            android:label="@string/title_activity_friends"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="aut.bme.hu.ui.profile.RegisterActivity"
            android:label="RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="aut.bme.hu.ui.frienddetail.FriendDetailsActivity"
            android:label="FriendDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
